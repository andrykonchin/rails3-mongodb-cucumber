<h1>Article</h1>

<div>
  <div>
    <h3>Name</h3>
    <p><%= @article.name %></p>
  </div>

  <div>
    <h3>Content</h3>
    <p><%= @article.content %><p>
  </div>

  <div>
    <h3>Author</h3>
    <%= @article.author_name %>
  </div>

  <div>
    <h3>Published</h3>
    <p><%= @article.created_at %></p>
  </div>
</div>

<div>
  <%= link_to 'Edit', edit_article_path(@article) %>
  <%= link_to 'Delete', article_path(@article), :method => :delete %>
</div>

<%= render :partial => "comments", :locals => {:article => @article} %>
