<h2>Comments</h2>

<div id="comments">
<% if article.comments.size > 0 %>
  <% article.comments.each do |comment| %>
    <%= render :partial => "comments/comment", :locals => { :comment => comment } %>
  <% end %>
<% end %>
</div>

<%= render :partial => "comments/form", :locals => { :article => article } %>
